<div class="container">

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
    <div class="banner-content">
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6">

      <div class="form-group search-form">
        <h3> Your coat details </h3>
        <div class="features">
          <p><strong>COAT </strong><%=@coat.name %></a></p>
          <p><strong>SIZE </strong><%=@coat.size %></a></p>
          <p><strong>PRICE </strong><%=@coat.price %>EUR</p>
          <div class="card-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= @coat.photo %>);">
          </div>
        </div>
      </div>
    </div>
      <div class="col-xs-12 col-sm-6">
        <%= render "forms/booking_form" %>
    </div>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>">
  </div>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js" %>
  <%= javascript_pack_tag "map" %>
</div>



