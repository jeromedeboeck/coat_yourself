<div class="container">
  <div class="banner" style="background-image: url(../../assets/gatsby.png);">
    <div class="banner-content">
      <h1>Coat Myself</h1>
      <p>Get the best coat ever!</p>
    </div>
  </div>

  <div class="row">

    <div class="col-xs-12">
      <% @categories.each do |category| %>
      <div class="card" style="background-image: url(../../assets/leather.jpg);">
        <div class="card-category">Category</div>
        <div class="card-description">
          <h2><%= category.name%></h2>
        </div>
      </div>
          <% end %>
    </div>
  </div>
</div>
