<div class="category-banner" style="background-image: url(https://res.cloudinary.com/dzcwxfufs/image/upload/v1533737761/Screen-Shot-2017-04-15-at-7.59.03-PM.png);">
  <div class="category-banner-content">
    <h1>Coat Yourself</h1>
  </div>
</div>

<% @categories.each do |category| %>
  <%= link_to category_path(category) do %>
  <div class="category-card" style="background-image: url( <%=category.photo %>);">
    <div class="category-card-category">Category</div>
    <div class="category-card-description">
      <h2><%= category.name%></h2>
    </div>
  </div>
  <% end %>
<% end %>
