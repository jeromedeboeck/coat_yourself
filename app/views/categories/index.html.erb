<div class="container">
  <div class="category-banner" style="background-image: url(https://res.cloudinary.com/dzcwxfufs/image/upload/v1533737761/Screen-Shot-2017-04-15-at-7.59.03-PM.png);">
    <div class="category-banner-content">
      <h1>Coat Yourself</h1>
      <p>Get the best coats ever!</p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
      <div class="category-card" style="background-image: url( <%=category.photo %>);">
        <div class="category-card-category">Category</div>
        <div class="category-card-description">
          <h2><%= category.name%></h2>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>

  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fa fa-github"></i></a>
      <a href="#"><i class="fa fa-instagram"></i></a>
      <a href="#"><i class="fa fa-facebook"></i></a>
      <a href="#"><i class="fa fa-twitter"></i></a>
      <a href="#"><i class="fa fa-linkedin"></i></a>
    </div>
    <div class="footer-copyright">
      All jackets are made of synthetic leather <i class="fa fa-heart"></i>
    </div>
  </div>

</div>
