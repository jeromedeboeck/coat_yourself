<div class="form-container form-margin-top">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-card">
        <h2>Sign up</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs form-field">
            <%= f.input :email, label: false, required: true, autofocus: true, class: "form-input", placeholder: "your email" %>
            <%= f.input :password, label: false, required: true, placeholder: "your password", class: "form-input" %>
            <%= f.input :password_confirmation, label: false, required: true, placeholder: "your password" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "form-button" %>
          </div>
        <% end %>
      </div>
    </div>
</div>
