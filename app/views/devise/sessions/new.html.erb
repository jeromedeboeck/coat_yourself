<div class="form-container form-margin-top">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <div class="form-card">
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs form-field">
            <%= f.input :email, label: false, required: false, placeholder: "your email", autofocus: true, class: "form-input" %>
            <%= f.input :password, label: false, required: false, placeholder: "your password", class: "input-group" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "form-button" %>
          </div>
      <% end %>
    </div>
  </div>
</div>

