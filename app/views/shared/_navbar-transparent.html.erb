<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <div>
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= link_to "CoatYourslef", root_path, class: "navbar-wagon-item navbar-wagon-link" %>
  <!-- add link to logo check original code-->
    <% end %>
  </div>

  <!-- Right Navigation -->
  <% if user_signed_in? %>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "bookings_path" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Dashboard") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to('Logout', destroy_user_session_path,  :method=>'delete')  %>
                <i class="fa fa-sign-out"><%= link_to('Logout', destroy_user_session_path,  :method=>'delete')  %></i>
            </li>
          </ul>
        </div>
      </div>
    </div>
  <% else %>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Links -->
    <%= link_to "Log In", user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Join", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link navbar-wagon-join" %>
    </div>
  <% end %>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">Settings</a></li>
        <li><a href="#">Sign Out</a></li>
      </ul>
    </div>
  </div>
</div>
